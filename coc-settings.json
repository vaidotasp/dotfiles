{
  "suggest.minTriggerInputLength": 2,
  "suggest.maxCompleteItemCount": 20,
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.hoverTarget": "float",
  "diagnostic.refreshOnInsertMode": true,
  "suggest.floatEnable": true,
  "suggest.noselect": false,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.enablePreview": true,
  "tailwindCSS.emmetCompletions": true,
  "suggest.enablePreselect": true,
  "suggest.maxPreviewWidth": 100,
  "diagnostic.maxWindowHeight": 20,
  "diagnostic.checkCurrentLine": true,
  "git.enableGlobalStatus": false,
  "explorer.icon.enableNerdfont": true,
  "explorer.sources": [
    {"name": "buffer", "expand": true},
    {"name": "file", "expand": true}
  ],
  "explorer.openAction.for.directory": "expandOrCollapse",
  "explorer.previewAction.onHover": false,
  "signature.maxWindowHeight": 20,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "prettier.requireConfig": true,
  "eslint.autoFixOnSave": false,
  "eslint.enable": true,
  "html.format.enable": true,
  "tsserver.formatOnType": false,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "languageserver": {
    "golang": {
      "command": "/Users/vpiekus/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
}
}
